extends layout

block content
  .w3-content(style="max-width:1400px")
    header.w3-container.w3-center.w3-padding-48.w3-black
      h1.w3-xxxlarge Advogado
  .w3-container
    table.w3-table-all.w3-card-4
      tr.w3-hover-blue
        th Nome
        th Carro
        th Bebida
        th Especialidade
      each adv in advogados
        tr.w3-hover-blue
          td= adv.nome
          td= adv.carro
          td= adv.bebida
          td= adv.especialidade
