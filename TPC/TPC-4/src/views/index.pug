extends layout

block content
  .w3-content(style="max-width:1400px")
    header.w3-container.w3-center.w3-padding-48.w3-black
      h1.w3-xxxlarge Lista de Advogados
  .w3-container
    table.w3-table-all.w3-card-4
      tr.w3-hover-blue
        th Nome
        th Carro
        th Operações
      each ad in advogs
        tr.w3-hover-blue
          td= ad.nom
          td= ad.carro
          td 
            a(href="/" + ad.nom) 
              button.w3-button.w3-round-xlarge.w3-blue Ver
  
